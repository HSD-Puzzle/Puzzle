<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detailsbillItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Burger" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailsbillItem_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@id/detailsbillItem_streak"
            android:text="200$" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"

            android:layout_toLeftOf="@id/detailsbillItem_streak"
            android:text="x" />

        <TextView
            android:id="@+id/detailsbillItem_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.10" />
    </LinearLayout>

    <TextView
        android:id="@+id/detailsbillItem_streakdestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:textColor="@color/orangeRed700"
        android:text="XXX" />


</RelativeLayout>