<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       >
       <TextView
           android:id="@+id/textViewSettings"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Settings"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="50dp" />

       <Button
           android:id="@+id/backToMain"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Back"
           android:layout_below="@id/audioSeekBar"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           />


       <SeekBar
           android:id="@+id/audioSeekBar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/textViewSettings"
           android:layout_marginTop="18dp" />

       <Button
           android:id="@+id/playSound_0"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="playSound_0"
           android:layout_below="@id/backToMain"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp" />

       <Button
           android:id="@+id/playSound_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="playSound_1"
           android:layout_below="@id/playSound_0"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp" />

       <Button
           android:id="@+id/notification"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="notification"
           android:layout_below="@id/playSound_1"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp" />

   </RelativeLayout>

</RelativeLayout>
